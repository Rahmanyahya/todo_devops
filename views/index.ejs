<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List App</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <div class="card">
      <h1>üìù Todo List</h1>

      <!-- Add Todo Form -->
      <form class="todo-form" action="/todos" method="POST">
        <input
          type="text"
          name="task"
          placeholder="Add a new task..."
          required
          autocomplete="off"
        >
        <button type="submit">Add</button>
      </form>

      <!-- Todo List -->
      <div class="todo-list">
        <% if (todos.length === 0) { %>
          <div class="empty-state">
            <p>No tasks yet. Add one above! üöÄ</p>
          </div>
        <% } else { %>
          <% todos.forEach(todo => { %>
            <div class="todo-item <%= todo.completed ? 'completed' : '' %>">
              <form class="complete-form" action="/todos/<%= todo.id %>/complete" method="POST">
                <input type="checkbox" <%= todo.completed ? 'checked' : '' %> onchange="this.form.submit()">
              </form>
              <span class="todo-text"><%= todo.task %></span>
              <form class="delete-form" action="/todos/<%= todo.id %>/delete" method="POST">
                <button type="submit" class="delete-btn">‚úï</button>
              </form>
            </div>
          <% }) %>
        <% } %>
      </div>

      <!-- Stats -->
      <% if (todos.length > 0) { %>
        <div class="stats">
          <span class="stat">
            Total: <strong><%= todos.length %></strong>
          </span>
          <span class="stat">
            Completed: <strong><%= todos.filter(t => t.completed).length %></strong>
          </span>
          <span class="stat">
            Pending: <strong><%= todos.filter(t => !t.completed).length %></strong>
          </span>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
